<Page ux:Name="ConversationListPage" Title="Hi Quentin!" ux:AutoBind="false">
  <Grid Rows="auto,1*,auto">

    <!-- Header. -->
    <Panel Row="0" Padding="30,20" Background="#7EEFCC">
      <Text Font="KarlaBold" FontSize="28" Value="Test" />
    </Panel>

    <!-- Footer tabs. -->
    <Panel ux:Name="TestPanel" Row="2" Background="White" Height="60">
      <Grid Row="2" Columns="1*,1*">
        <Panel Column="0" HitTestMode="LocalBounds">
          <Clicked Handler="{state.list.addItem}" />

          <Image StretchMode="Uniform" Width="18" Alignment="Center" File="../Assets/Icons/TabIconRecent@2x.png"/>
          <Rectangle Background="Black" Height="4%" Alignment="Bottom"/>
        </Panel>
        <Panel Column="1" HitTestMode="LocalBounds">
          <Image StretchMode="Uniform" Width="18" Alignment="Center" File="../Assets/Icons/TabIconProfile@2x.png"/>
        </Panel>
      </Grid>
    </Panel>

    <!-- Scrolling content. -->
    <FileImageSource ux:Key="Avatar1" File="../Assets/Avatars/Avatar1.png"/>
    <FileImageSource ux:Key="Avatar2" File="../Assets/Avatars/Avatar2.png"/>
    <FileImageSource ux:Key="Avatar3" File="../Assets/Avatars/Avatar3.png"/>
    <FileImageSource ux:Key="Avatar4" File="../Assets/Avatars/Avatar4.png"/>

    <ScrollView Row="1">
      <StackPanel Margin="0,0,0,40">
        <Each Items="{state.list.items}">
          <ConversationItem ContentPadding="20,22,24,22" Recipient="{id}" Time="1 HOUR" Summary="{text}" Avatar="{Resource Avatar1}">
            <Clicked Handler="{removeItem}" />
            <LayoutAnimation>
              <Move RelativeTo="LayoutChange" Y="1" Duration="0.2" Easing="CircularInOut"/>
            </LayoutAnimation>
            <AddingAnimation>
              <Move RelativeTo="Size" X="1" Duration="0.3" Easing="CircularInOut" />
            </AddingAnimation>
            <RemovingAnimation>
              <Move RelativeTo="Size" X="1" Duration="0.3" Easing="CircularInOut" />
            </RemovingAnimation>
          </ConversationItem>
        </Each>
      </StackPanel>
    </ScrollView>
  </Grid>
</Page>
